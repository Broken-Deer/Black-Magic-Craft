{
    "name": "black_magic_craft",
    "version": "1.0.0",
    "description": "Black Magic Craft 启动器",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder -w --x64",
        "package": "electron-packager . black_magic_craft --platform=win32 --arch=x64 --out=./out --asar --app-version=1.0.0 --overwrite --ignore=node_modules"
    },
    "author": "Broken_Deer",
    "license": "GPL-3.0",
    "devDependencies": {
        "electron": "^21.2.2",
        "electron-builder": "^23.6.0",
        "electron-packager": "^17.1.1",
        "path": "^0.12.7"
    },
    "build": {
        "productName": "Black Magic Craft",
        "appId": "black_magic_craft",
        "copyright": "Broken_Deer",
        "win": {
            "target": [
                "nsis"
            ],
            "icon": "./logo.ico"
        },
        "mac": {
            "icon": "./logo.ico"
        },
        "linux": {
            "icon": "./logo.ico"
        },
        "nsis": {
            "oneClick": false,
            "guid": "BMC",
            "perMachine": true,
            "allowElevation": true,
            "allowToChangeInstallationDirectory": true,
            "installerIcon": "./logo.ico",
            "uninstallerIcon": "./logo.ico",
            "installerHeaderIcon": "./logo.ico",
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "Black Magic Craft"
        }
    },
    "dependencies": {
        "@xmcl/installer": "^4.4.0",
        "babel-cli": "^6.26.0",
        "got": "^12.5.2",
        "http2-got": "^1.1.1"
    }
}
